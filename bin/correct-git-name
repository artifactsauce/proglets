#!/usr/bin/env bash

set -eu

. $(dirname $0)/../lib/bash/functions
. $(dirname $0)/../lib/bash/logger

usage() {
    cat <<EOF >&2
Usage: $(basename $0) OLD_NAME NEW_NAME
EOF
}

if [ $# -ne 2 ]; then
    logger.error "Required old and new name."
    usage
    exit false
fi

OLD_NAME=$1 NEW_NAME=$2 git filter-branch --commit-filter '
  if [ "$GIT_AUTHOR_NAME" = "$OLD_NAME" -o "$GIT_COMMITTER_NAME" = "$OLD_NAME" ];
    then
      GIT_COMMITTER_NAME="$NEW_NAME";
      GIT_AUTHOR_NAME="$NEW_NAME";
      git commit-tree "$@";
  else
    git commit-tree "$@";
  fi' HEAD
